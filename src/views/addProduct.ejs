<!DOCTYPE html>
<html lang="es">

  <%- include('./partials/head') %>

<body>
  <%- include('./partials/header') %>
  <%- include('./partials/adminNavBar') %>
    <main class="addProduct-main">
      <div>
        <h2 class="addProduct-title-h2">Cargar nuevos productos</h2>
      </div>
      <div class="trainingShop-shadow card mx-auto p-3 mt-3 mb-3 col-md-12">
        <div class="card-body">
          <form action="/products/store" method="POST" class="col-12">
            <div class=" col-12 col-lg-6">
              <label class="register-main-label text-start">Nombre:</label>
              <input class="register-main-input" type="text" name="name" id="name" placeholder="ej: Creatine Xplode ">
          </div>
          <div class=" col-12 col-lg-6 mt-1">
            <label class="register-main-label text-start">Precio:</label>
            <input class="register-main-input" type="number" name="price" id="price" placeholder="ej: 3500">
        </div>
        
        <!-- selects -->
        <div class="mt-3 col-12"> 
          <select name="sectionId" class="form-select form-select-celeste">
            <option value="">Sección</option>
            <% sections.forEach(({id,name}) => { %>
              <option value="<%= id %>"><%= name %> </option>
            <% }) %>
          </select>

          <select name="categoryId" class="form-select form-select-celeste mt-2">
            <option value="category">Categoría</option>
            <% categories.forEach(({id,name}) => { %>
              <option value="<%= id %>"><%= name %> </option>
            <% }) %>
          </select>

          <select name="brandId" class="form-select mt-2 form-select-celeste">
            <option value="">Marca</option>
            <% brands.forEach(({id,name}) => { %>
              <option value="<%= id %>"><%= name %> </option>
            <% }) %>
          </select>

          <input type="text" placeholder="Ingrese nueva marca..." name="otro" class="register-main-input mt-2">


        </div>

        <div class="mt-3 col-12">
          <div class="form-floating">
            <textarea class="form-control register-main-input" placeholder="Descripción del producto..." id="floatingTextarea2" style="height: 100px"></textarea>
            <label for="floatingTextarea2">Descripción del producto:</label>
          
            <div>
              <div class="card-body mt-3">
                <img src="/images/default-image.png" alt="" class="trainingShop-shadow">
              </div>
              <label for="avatar" class="register-main-input label-add  text-center">Agregar imagen</label>
              <input type="file" name="avatar" id="avatar" hidden>
            </div>
            
          </div>
          <div class="addProduct-div-button mt-4">
            <button type="submit">Guardar</button>
            <button type="reset">Borrar</button>
          </div>
          </form>
        </div>
          
        
      </div>
    </main>
    <%- include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>

</html>