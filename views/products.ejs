<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <main class="productsMain">
                <h2 class="productsMain__h2">TODOS LOS PRUDUCTOS:</h2>
                <% products.forEach(({id,name,image,description,price})=> { %>
                    <article class="index__section__novedades--article sombra">
                        
                            <div class="index__section__novedades--container"><img
                                    src="/images/productsImage/<%= image %> " alt=""></div>
                            <h4 class="index__section__h4">
                                <%= name %>
                            </h4>
                            <div class="article__price--flex">
                                <p>$<%= toThousand(price) %> </p>
                                <a a href="/products/detail">Comprar</a>
                            </div>
                       
                    </article>

                    <% }) %>

            </main>
            <%- include('./partials/footer') %>
    </body>

</html>